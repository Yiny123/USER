<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/xjj"/>

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/px_to_dip_30"
        android:background="@color/base_text_color_light"
        android:paddingBottom="@dimen/px_to_dip_10"
        android:paddingLeft="@dimen/px_to_dip_30"

        android:paddingRight="@dimen/px_to_dip_30"
        android:paddingTop="@dimen/px_to_dip_10"
        android:text="跳过"/>


</RelativeLayout>